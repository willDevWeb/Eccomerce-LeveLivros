<!DOCTYPE html>
<html lang="pt-br">
    <%- include('partials/head') %> 
    <link rel="stylesheet" href="/stylesheets/formularios.css">
<body>
    <%- include('partials/header') %> 
    <main class="container">
        <div class="row">
            <div class="box-logo-forms">
                <img src="/images/img/logo.png" alt="logo-icon">
            </div>
            <div class="col-8" style="margin: 15px auto 0px auto;">
                <form id="myForm">
                    <div class="form-group">
                        <label for="username">Nome completo:</label>
                        <input type="text" name="username" id="username" class="form-control">
                        <div id="err_username"></div>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" name="email" id="email" class="form-control">
                        <div id="err_email"></div>
                    </div>
                    <div class="form-group">
                        <label for="re_email">Confirme seu email:</label>
                        <input type="email" name="re_email" id="re_email" class="form-control">
                        <div id="err_re_email"></div>
                    </div>
                    <div class="form-group">
                        <label for="psw">Senha:</label>
                        <input type="password" name="password" id="password" class="form-control">
                        <div id="err_password"></div>
                    </div>
                    <div class="form-group">
                        <label for="re_psw">Confirme sua senha:</label>
                        <input type="password" name="re_password" id="re_password" class="form-control">
                        <div id="err_re_password"></div>
                    </div>
                    <div>
                        <input type="file" name="avatar" id="avatar">
                        <div id="err_avatar"></div>
                    </div>
                    <div class="d-flex justify-content-around">
                        <button type="submit" class="btn btn-info">Cadastrar-se</button>
                        <button type="reset" class="btn btn-light border" id="clear_form">Limpar</button>
                    </div>
                </form>
            </div>
            <div class="boxSpacing"></div>
        </div>
    </main>
    <script src="/js/user_singn.js"></script>
    <%- include('partials/footer') %> 
</body>
</html>