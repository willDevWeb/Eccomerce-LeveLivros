<!DOCTYPE html>
<html lang="pt-br">
<%- include('partials/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/carousel.css">
<body>
  <%- include('partials/header.ejs') %> 
  <main class="container">
    <div class="bg-light" id="content_view">
      <div id="top_page">
        <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
          <div class="carousel-indicators"></div>
          <div class="carousel-inner" style="height: 520px;"></div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
          </button>
        </div>
        <div class="banner">
            <img src="/images/banners/prop_1.png">
            <img src="/images/banners/prop_2.png">
        </div>
      </div>
      <div id="center_page">
        <div>
          <h5 class="border-top mt-5 text-center">Todos os produtos com preços incríveis confira</h5>
        </div>
        <div id="preload" class="row">
          <% for(let i = 0; i <= 23 ; i++) {%>
          <div class="col-6 col-sm-4 col-lg-3 col-xl-2 p-3">
            <div class="border-on">
              <div class="img-product"></div>
              <div class="content-text"></div>
            </div>
          </div>
          <% } %> 
        </div>
        <div class="row-books d-none" id="row_products">
        </div>
      </div>
      <nav aria-label="Navegação de página">
        <ul class="pagination justify-content-center p-3">
            <li class="page-item"><button class="page-link me-2" id="previous">Anterior</button></li>
            <li class="page-item"><button class="page-link" id="next">Próximo</button></li>
        </ul>
      </nav>
    </div>
  </main>
  <%- include('partials/footer') %> 
  <script src="/js/functions/CreateProductsContent.js"></script>
  <script src="/js/products/get-products-home.js"></script>
  <script src="/js/carousel/carousel.js"></script>
  <script src="/js/bootstrap.js"></script>
</body>
</html>