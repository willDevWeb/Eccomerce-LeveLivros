                        <input type="password" class="form-control"  name="password" id="password" placeholder="informe sua senha" value="">
                        <div id="err_password"></div>
                    </div>
                    <div>
                        <button type="submit" id="submit" class="btn btn-info mt-2">Entrar</button>
                    </div>
                    <div class="createAcc">
                        <label>NÃ£o tem uma conta? crie uma agora mesmo</label>
                        <a href="/auth/sign">Criar minha conta</a>
                    </div>
                </form>
            </div>
            <div class="boxSpacing"></div>
        </div>
    </main>
    <%- include('partials/footer') %>
    <script src="/js/user_login.js"></script>
</body>
</html>