<!DOCTYPE html>
<html lang="pt-br">
    <%- include('partials/head.ejs') %>
    <link rel="stylesheet" href="/stylesheets/adm/index.css">
    <link rel="stylesheet" href="/stylesheets/adm/users/get_user.css">
    <link rel="stylesheet" href="/stylesheets/adm/products/prod.css">
<body>
    <%- include('partials/header.ejs') %> 
    <main class="container">
        <div class="bg-white">
            <div class="content_page_adm">
                <div class="painel_rigth_adm">
                    <%- include('partials/admin/menu') %>
                </div>
                <div class="painel_left_adm">
                    <div class="box_get_user">
                        <div>
                            <div>
                                <p id="full_name"></p>
                            </div>
                            <div>
                                <p id="login"></p>
                                <p id="email"></p>
                            </div>
                            <div>
                                <p id="telephone"></p>
                            </div>
                            <div>
                                <p id="user_cpf"></p>
                            </div>
                            <div>
                                <p id="city"></p>
                            </div>
                            <div>
                                <p id="state"></p>
                            </div>
                            <div>
                                <p id="cep"></p>
                            </div>
                            <div>
                                <p id="road"></p>
                            </div>
                            <div>
                                <p id="complements"></p>
                            </div>
                        </div>
                    </div>
                    <div class="text-end p-5">
                        <button type="button" class="btn btn-light" id="put_user">Editar Usuario</button>
                        <button type="button" class="btn btn-light" id="delete_user">Deletar Usuario</button>
                    </div>
                    <div>
                        <form id="myForm" class="">
                            <h4>Editar Usuário</h4>
                            <div class="msg text-center"></div>
                            <div class="form-group">
                                <label for="username">Nome completo:</label>
                                <input type="text" name="username" id="username" class="form-control">
                                <div class="danger text-end" id="error_username"></div>
                            </div>
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input type="email" name="email" id="email" class="form-control">
                                <img src="" alt="">
                                <div class="danger text-end" id="error_email"></div>
                            </div>
                            <div class="form-group border">
                                <div class="img_avatar">
                                    <input type="file" name="avatar_user" id="avatar_user" class="btn btn-light" >
                                </div>
                                <div class="Err_avatar_user damger text-end"></div>
                            </div>
                            <div class="form-group">
                                <label for="psw">Senha:</label>
                                <input type="password" name="password" id="password" class="form-control">
                                <div class="danger text-end" id="error_password"></div>
                            </div>
                            <div class="form-group">
                                <label for="admin">Autoriazação de acesso</label>
                                <select name="admin" id="admin" class="form-control" disabled>
                                    <option value="false">Padrão</option>
                                    <option value="true">administrador</option>
                                </select>
                            </div>
                            <div class="text-center m-4">
                                <button type="submit" class="btn btn-info">Editar</button>
                                <button type="reset" class="btn btn-light border" id="clear_form">Limpar</button>
                                <button type="button" class="btn btn-light m-4" id="close_put">Fechar Edição</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
    <script src="/js/admin/index.js"></script>
    <script src="/js/admin/user/user_show.js"></script>
</body>
</html>