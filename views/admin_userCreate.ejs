<!DOCTYPE html>
<html lang="pt-br">
    <%- include('partials/head.ejs') %>
    <link rel="stylesheet" href="/stylesheets/adm/index.css">
    <link rel="stylesheet" href="/stylesheets/adm/products/prod.css">
<body>
    <%- include('partials/header.ejs') %> 
    <main class="container">
        <div class="bg-white">
            <div class="content_page_adm">
                <div class="painel_rigth_adm">
                    <%- include('partials/admin/menu') %>
                </div>
                <div class="painel_left_adm">
                    <form class="form_user_create" id="myForm">
                        <h4>Adicionar um novo usuário</h4>
                        <div class="msg text-center"></div>
                        <div class="form-group">
                            <label for="username">Nome completo:</label>
                            <input type="text" name="username" id="username" class="form-control">
                            <div class="danger text-end" id="error_username"></div>
                        </div>
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" name="email" id="email" class="form-control">
                            <div class="danger text-end" id="error_email"></div>
                        </div>
                        <div class="form-group">
                            <label for="re_email">Confirmar Email:</label>
                            <input type="email" name="re_email" id="re_email" class="form-control">
                            <div class="danger text-end" id="error_re_email"></div>
                        </div>
                        <div class="form-group">
                            <label for="psw">Senha:</label>
                            <input type="password" name="password" id="password" class="form-control">
                            <div class="danger text-end" id="error_password"></div>
                        </div>
                        <div class="form-group">
                            <label for="re_psw">Confirmar Senha:</label>
                            <input type="password" name="re_password" id="re_password" class="form-control">
                            <div class="danger text-end" id="error_re_password"></div>
                        </div>
                        <div class="form-group">
                            <label for="admin">Autoriazação de acesso</label>
                            <select name="admin" id="admin" class="form-control">
                                <option value="default">Padrão</option>
                                <option value="admin">administrador</option>
                            </select>
                        </div>
                        <div class="text-end m-5">
                            <button type="submit" class="btn btn-info">Cadastrar</button>
                            <button type="reset" class="btn btn-light border" id="clear_form">Limpar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
    <script src="/js/admin/index.js"></script>
    <script src="/js/admin/user/user_create.js"></script>
</body>
</html>